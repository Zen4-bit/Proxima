{
    "name": "proxima",
    "version": "3.0.0",
    "description": "Proxima - Local MCP Server (requires localhost network access for AI coding tools)",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Zen4-bit",
    "keywords": [
        "mcp",
        "ai",
        "chatgpt",
        "claude",
        "gemini",
        "perplexity",
        "multi-ai",
        "electron"
    ],
    "type": "module",
    "main": "electron/main-v2.cjs",
    "scripts": {
        "start": "electron .",
        "mcp": "node src/mcp-server-v3.js",
        "build": "electron-builder --win --x64",
        "build:installer": "electron-builder --win --x64 -c.win.target=nsis"
    },
    "build": {
        "appId": "com.proxima.app",
        "productName": "Proxima",
        "copyright": "Copyright Â© 2026 Proxima",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "src/**/*",
            "assets/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "asarUnpack": [
            "src/**/*",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/proxima-icon.png",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Proxima"
        }
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.3",
        "sql.js": "^1.13.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "electron": "^33.4.11",
        "electron-builder": "^25.1.8",
        "http-server": "^14.1.1"
    }
}